    position: absolute;
    left: 23rpx;
    font-size: 30rpx;
    color: #fff;
    top: 208rpx;
}
.official_item .design_des{
    position: absolute;
    left: 23rpx;
    top: 262rpx;
    color: #676767;
    width: 241rpx;
    line-height: 28rpx;
}
.official_item .sale_price{
    position: absolute;
    left: 23rpx;
    font-size: 30rpx;
    color: #fff;
    top: 400rpx;
}
.swiper-btn-wrapper {
    margin-top: 50rpx;
}
.swiper-btn-wrapper .swiper-btn-list{
    display: flex;
    justify-content: center;
    align-items: center;
}
.swiper-btn-wrapper .swiper-btn-list .dot{
    margin-left: 16rpx;
    width: 17rpx;
    height: 17rpx;
    /*border:1px solid #c6451b;*/
    background-color: #484848;
    border-radius: 50%
}
.swiper-btn-wrapper .swiper-btn-list .dot.on{
    background-color: #fff
}
