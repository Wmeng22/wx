}
.recommend .official{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    padding-top: 76rpx;
    color: #fff
}
.recommend .des{
    font-size: 24rpx;
    text-align: center;
    padding-top: 23rpx;
}
.recommend swiper{
    margin-top: 63rpx;
    height: 450rpx;
}
.recommend .official_item{
    width: 50%;
