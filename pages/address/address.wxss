.container{
    position: relative;
    padding: 0 76rpx;
}
page{
  width: 750rpx;
  height: 1334rpx;
  overflow-x: hidden;
}
.content{
  width: 100%
}
.container_2.bg_gray{
background-color: #1a1a1a
}
.label{
    font-size: 26rpx;
    color:#c6451b;
    margin:63rpx 0 15rpx;
    display: block
}
.content input{
    border:none;
    border-bottom: 1px solid #313131;
    color:#ffffff;
    height: 78rpx;
    font-size: 30rpx;
}
.picker{
    font-size: 30rpx;
    border-bottom: 1px solid #313131;
    height: 78rpx;
    line-height: 78rpx;
    overflow: hidden;
}
.arrow{
    width: 20rpx;
    height: 20rpx;
    background: url('https://static.heys.com/wxapp/imgs/icon_pull.png') no-repeat center 5rpx;
    display: inline-block;
    background-size: 18rpx 10rpx;
}
.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}

.citypicker{

}
.citybody {
  position: fixed;
  bottom: 0px;
    width: 100%;
    height: 300px;
  z-index: 999
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  font-size: 28rpx;
  height: 80rpx;
    background-color: white;
    border-bottom: 1px solid #ebebeb;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #c6451b;
    padding-left:40rpx;
    line-height:40rpx;

}
.city-true {
  float: right;
  margin: 20rpx;
  color: #c6451b;
    padding-right:40rpx;
    line-height:40rpx;

}
.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}
picker-view{
  background-color: white
}
picker-view-column view{
  color:black;
    line-height: 40px;
    padding-left:10px;
    text-align:center
}
.bottomButton{
    position: fixed;
    bottom: 0;
    width: 100%;
    color: #fff;
    background-color: #c6451b;
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
    font-size: 30rpx
}