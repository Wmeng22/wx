 /* base start*/
 page{
    height: 100%;
    background-color: #1a1a1a;
    margin: 0;
    padding: 0;
    font: 24rpx/1.0 "Helvetica Neue", "Helvetica", "Arial", "PingFang SC", "Microsoft YaHei", "sans-serif"; 
}
view,input,button,textarea{
    margin: 0;
    padding: 0;
    color: #b8b8b8;
}
.wrap{
     position: relative;
}
.theColor{
     color: #c6451b; /*主题色*/
}
/* base end*/
